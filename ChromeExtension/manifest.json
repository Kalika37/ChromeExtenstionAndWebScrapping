{
  "manifest_version": 3,
  "name": "Fake News Detection",
  "version": "1.0.0",
  "description": "A Basic Application to track false informations",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_icon": {
      "48": "images/icon-48.png",
    "128": "images/icon-128.png"
    },
    "default_title":"Awesome Fake Detector",
    "default_popup":"popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "http://*.example.com//"
      ]
    }
  ]
}